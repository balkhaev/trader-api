# PumpFun Trader Service Configuration

# Режим работы
NODE_ENV=development

# PumpPortal API настройки
PUMPPORTAL_BASE_URL=https://api.pumpportal.com
PUMPPORTAL_WS_URL=wss://api.pumpportal.com/ws
PUMPPORTAL_API_KEY=your_api_key_here

# База данных PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=pumpportal_db

# Redis для очередей
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Настройки сервера
PORT=3000
HOST=0.0.0.0

# Логирование
LOG_LEVEL=debug

# Настройки трейдера (опционально, можно настроить через API)
TRADER_ENABLED=false
TRADER_MIN_MARKET_CAP=10000
TRADER_MAX_MARKET_CAP=1000000
TRADER_MIN_VOLUME_24H=5000
TRADER_MAX_AGE_MINUTES=30
TRADER_BUY_AMOUNT_SOL=0.1
TRADER_STOP_LOSS_PERCENT=20
TRADER_TAKE_PROFIT_PERCENT=50
TRADER_MAX_POSITIONS=5
TRADER_SLIPPAGE_PERCENT=5
TRADER_PRIORITY_FEE_SOL=0.001 
